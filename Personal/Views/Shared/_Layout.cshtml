@model Personal.Models.Viewmodel
<!doctype html>
<html lang="en">

<head>
    <!-- Meta -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <!-- Title -->
    <title> Phathi - Personal Website</title>

    <!-- CSS Plugins -->
    <link rel="stylesheet" href="~/assets/css/all.css">
    <link rel="stylesheet" href="~/assets/css/elegant-font-icons.css">
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/css/jquery.animatedheadline.css">
    <link rel="stylesheet" href="~/assets/css/magnific-popup.css">
    <link rel="stylesheet" href="~/assets/css/owl.carousel.css">


    <!-- Font Google -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Muli:300,400,500,600,700,800,900&display=swap" rel="stylesheet">

    <!-- main CSS -->
    <link rel="stylesheet" href="~/assets/css/main.css">

</head>

<body class="dark" data-spy="scroll" data-target="#scrollspy" data-offset="1">
    @RenderBody()

    <!--menu toggle-->
    <div class="menu-toggle" id="menuToggle">
        <span></span>
    </div>

    <!--header-left-->
    <div class="header-left" id="scrollspy">
        <!--logo-->
        <div class="logo bg-base-color">
            <a href="index-dark.html" class="mb-0">Pha</a>
        </div>

        <!--menu-->
        <div class="main-menu" id="js-menu">
            <div class="cross bg-base-color">
                <span><i class="fas fa-times text-white"></i></span>
            </div>
            <nav class="menu">
                <ul class="menu-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="#home">Home</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="#about">About </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="#services">Services</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="#works">Works</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#contact">Contact</a>
                    </li>
                </ul>
            </nav>
        </div>

        <!--btn-share-->
        <div class="btn-share">
            <span class="social_share text-dark"></span>
        </div>

    </div>



    <!--main-->
    <div class="main">
        <!--Home -->
        @foreach (var item in Model.sliderinfo)
        {
            <section class="home bg-light vh-100" id="home" style="background-image: url(@string.Format("/Uploads/{0}",item.Image))">
                <div class="container-fluid">
                    <div class="row ">
                        <div class="col-lg-12 ">
                            <!--social-media-->
                            <div class="social-home">
                                <ul class="list-inline">
                                    <li>
                                        <a href="#">
                                            <i class="fab fa-facebook-f"></i>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="fab fa-twitter"></i>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="fab fa-instagram "></i>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="fab fa-dribbble"></i>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="fab fa-behance "></i>
                                        </a>
                                    </li>
                                </ul>
                            </div>

                            <div class="d-flex align-items-center vh-100">
                                <div class="full-width">
                                    <div class="banner">
                                        <h6>Hi There,</h6>
                                        <h1 class="cd-headline clip">
                                            I Am a
                                            <span class="cd-words-wrapper">
                                                <b class="is-visible"> Developer</b>
                                                <b>Designer</b>
                                                <b>Freelancer</b>
                                            </span>
                                        </h1>
                                        <p class="max-width-450  mt-20 mb-30">
                                            Fresh graduate and I have a good background in dot net
                                        </p>
                                        <a href="#about" class="btn-custom">
                                            <span><i class="fas fa-user"></i></span>
                                            <span> More About Me</span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <!--my-info-->
                            <div class="my-info">
                                <div class="item">
                                    <p class="font-w-700 mb-0">Email</p>
                                    <p class="mb-0">@item.Email</p>
                                </div>

                                <div class="item">
                                    <p class="font-w-700 mb-0">Phone</p>
                                    <p class="mb-0">@item.Phone</p>
                                </div>

                                <div class="item">
                                    <p class="font-w-700  mb-0">Location</p>
                                    <p class="mb-0">@item.Location</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

        }

        <!-- About -->
        @foreach (var item in Model.aboutme)
        {
            <section id="about" class="section about">
                <div class="container-fluid">
                    <div class="row mb-50 pt-30">
                        <div class="col-md-12">
                            <div class="section-title">
                                <h2 class="mb-0">About me</h2>
                                <p class="text-muted mb-0">Main informations about me and what I love to do.</p>
                            </div>
                        </div>
                    </div>
                    <!--Hero & info-->
                    <div class="row mb-50">
                        <div class="col-lg-5">
                            <div class="hero">
                                <img src="~/Uploadsabout/@(item.Image)" alt="">
                            </div>
                        </div>

                        <div class="col-lg-7 d-flex align-items-center">
                            <div class="details">
                                <h5>
                                    Hello ,I'm Phathi Ahmed
                                    Web Devoloper
                                </h5>
                                <p class="mb-25">
                                    @item.Description
                                </p>

                                <!--about info-->
                                <ul class="info mb-5 list-inline">
                                    <li><span>Name :</span> @item.Name</li>
                                    <li><span>Phone :</span> @item.Phone</li>
                                    <li><span>Date of birth :</span>@item.Dateofbirth</li>
                                    <li><span>Email :</span><a href="mailto:contact@mariam.com" class="text-dark">@item.Email</a></li>
                                    <li><span>Nationality :</span> @item.Nationality</li>
                                    <li><span>Address :</span> @item.Address</li>
                                    @*<li><span>Work Status :</span> @item.Description</li>*@
                                    <li><span>Freelancer :</span> @item.Freelancer</li>
                                </ul>

                                <a href="#about" class="btn-custom">
                                    <span><i class="fas fa-cloud-download-alt"></i></span>
                                    <span>Downland My CV</span>
                                </a>
                            </div>
                        </div>
                    </div>

                    
                    <!-- Timeline-->
                    <div class="row ">
                        <div class="col-lg-6">
                            <!--Timeline-->
                            <h5 class="mb-30">My Expericence</h5>
                            <div class="timeline">

                                <!--item 1-->
                                <div class="item">
                                    <div class="content">
                                        <h6 class="mb-0">
                                            Fresh web developer
                                            <span class="text-muted"> - </span> 
                                        </h6>
                                        <small class="text-muted">2022 - present</small>
                                        <p class="pt-15 mb-0">
                                            Fresh Graduate Specialized in DotNet Web Devolpment.
                                            Skilled in Html 5 , CSS 3 , Bootstrap , JavaScript , MVC5 , LINQ , SQL , EntityFrameWork and ASP.NET.
                                        </p>
                                    </div>
                                </div>
                                
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <h5 class="mb-30">My Education</h5>
                            <div class="timeline">
                                <!--item 1-->
                                <div class="item">
                                    <div class="content">
                                        <h6 class="mb-0">
                                            Computers And Artificial Intelligence 
                                            <span class="text-muted"> - </span> Benha University
                                        </h6>
                                        <small class="text-muted">2016 - 2020</small>
                                        <p class="pt-15 mb-0">
                                            - Bachelor's degree
                                            - Computer Science
                                            - Grade: Good
                                        </p>
                                    </div>
                                </div>
                                <!--item 2-->
                                <div class="item">
                                    <div class="content">
                                        <h6 class="mb-0">
                                            Projects
                                            <span class="text-muted"></span> 
                                        </h6>
                                        <small class="text-muted ">2021-2022</small>
                                        <p class="pt-15 mb-0">

                                            - Student Management ApplicationStudent Management Application
                                            Mar 2022
                                            With [Html , Css , BootStrap , EntityFrameWork , Asp.NetCore , MVC , LINQ]With [Html , Css , BootStrap , EntityFrameWork , Asp.NetCore , MVC , LINQ]
                                            -  Book Management SystemBook Management System
                                            Feb 2022
                                            With[Html , Css , BootStrap , Java Script,EntityFrameWork , Asp.Net MVC5 , LINQ]With[Html , Css , BootStrap , Java Script,EntityFrameWork , Asp.Net MVC5 , LINQ]
                                            -  BookStoreBookStore
                                            Feb 2022
                                            With [Html , Css , BootStrap , EntityFrameWork , Asp.NetCore , MVC , LINQ]
                                            - Personal Website
                                            Apr 2022
                                            With [Html , Css , BootStrap , EntityFrameWork , Asp.NetCore , MVC , LINQ , BL]

                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

        }

        <!-- Services -->
        <section id="services" class="section services">
            <div class="container-fluid">
                <div class="row mb-50">
                    <div class="col-md-12">
                        <div class="section-title">
                            <h2 class="mb-0">My Services</h2>
                            <p class="text-muted mb-0">I Have Worked With A Number Of Clients.</p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <!-- item -->
                    @foreach (var item in Model.service)
                    {
                        <div class="col-sm-6 col-lg-4">
                            <div class="item">
                                <div class="circle">
                                    <h2>@item.Id</h2>
                                </div>
                                <div class="content ">
                                    <h5 class="mt-15 mb-10">@item.Name</h5>
                                    <p class="mb-0">
                                        @item.Description
                                    </p>
                                </div>
                            </div>
                        </div>

                    }

                </div>
            </div>
        </section>

        <!-- Works -->
        <section id="works" class="section works">
            <div class="container-fluid">
                <div class="row mb-50">
                    <div class="col-md-12">
                        <div class="section-title">
                            <h2 class="mb-0">My Works</h2>
                            <p class="text-muted mb-0">A latest creative works in  design and web .</p>
                        </div>
                    </div>
                </div>
                <!--works-items -->
                
                <div class="row works-items">
                    @foreach (var item in Model.work)
                    {
                        <div class="col-lg-4 col-md-6">
                            <!--item -->

                            <div class="item">
                                <div class="image">
                                    <img src="/Uploadswork/@item.WorkImage" alt="">
                                    <div class="overly">
                                        <a href="/Uploadswork/@item.WorkImage" class="view-work"> View Work</a>
                                    </div>
                                </div>

                                <div class="details d-flex align-items-center">
                                    <p class="mb-0">@item.WorkName</p>
                                    <a href="work-single-dark.html" class="ml-auto"><i class="fas fa-external-link-alt"></i> </a>
                                </div>
                            </div>


                        </div>

                    }

                    

                
            </div>
        </section>

        

        
        <!-- Contact -->
        <section class="section contact pb-70" id="contact">
            <div class="container-fluid">
                <div class="row mb-50">
                    <div class="col-md-12">
                        <div class="section-title">
                            <h2 class="mb-0">Contact Me</h2>
                            <p class="text-muted mb-0">Feel Free To Contact Me Any Time </p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <form action="~/assets/php/mail.php" method="post" id="main_contact_form" class="form contact_form ">
                            <div class="alert alert-success contact_msg " style="display: none" role="alert">
                                Your message was sent successfully.
                            </div>
                            <div class="form-group">
                                <input type="text" name="name" id="name" class="form-control" placeholder="Name" required="required">
                            </div>

                            <div class="form-group">
                                <input type="email" name="email" id="email" class="form-control" placeholder="Email" required="required">
                            </div>

                            <div class="form-group">
                                <input type="text" name="subject" id="subject" class="form-control" placeholder="Subject" required="required">
                            </div>

                            <div class="form-group">
                                <textarea name="message" id="message" cols="30" rows="5" class="form-control" placeholder="Message" required="required"></textarea>
                            </div>

                            <button type="submit" name="submit" class="btn-custom">
                                <span><i class="fas fa-paper-plane"></i></span>
                                <span> Send Message</span>
                            </button>

                        </form>
                    </div>
                    <!--Contact -info -->
                    <div class="col-lg-6">
                        @foreach (var item in Model.contect)
                        {

                            <h5>Let's talk about everything!</h5>
                            <p class=" mb-30">
                                @item.Description
                            </p>
                            <div class="contact-info">
                                <div class="item mb-20">
                                    <p class="font-w-700 mb-0">Phone: </p>
                                    <p class="mb-0"><i class="fas fa-phone base-color"></i>@item.Phone</p>
                                </div>
                                <div class="item mb-20">
                                    <p class="font-w-700 mb-0">Email: </p>
                                    <p class="mb-0"><i class="fas fa-envelope base-color"> </i> @item.Email</p>
                                </div>
                                <div class="item mb-20">
                                    <p class=" font-w-700 mb-0">Adress: </p>
                                    <p class="mb-0"><i class="fas fa-map-marker-alt base-color"> </i>@item.Address</p>
                                </div>
                                <div class="item">
                                    <p class="font-w-700 mb-0">Skybe: </p>
                                    <p class="mb-0"> <i class="fab fab fa-skype base-color"> </i>@item.Skype</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </section>

        <!--Footer-->
        <footer class="pt-30 pb-30 bg-light">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <p class="text-center mb-0">© 2021 Phathi , Are Right All Resereved.</p>
                    </div>
                </div>
            </div>
        </footer>

        <!--social-media-->
        <div class="social-footer">
            <ul class="list-inline">
                <li><a href="#"><i class="fab fa-facebook-f "></i></a></li>
                <li><a href="#"><i class="fab fa-twitter "></i></a></li>
                <li><a href="#"><i class="fab fa-instagram "></i></a></li>
                <li><a href="#"><i class="fab fa-dribbble "></i></a></li>
                <li><a href="#"><i class="fab fa-behance"></i></a></li>
            </ul>
        </div>
    </div>
    <!--Main End-->
    <!--loading -->
    <div class="loading">
        <div class="circle"></div>
    </div>

    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="~/assets/js/jquery.min.js"></script>
    <script src="~/assets/js/popper.min.js"></script>
    <script src="~/assets/js/bootstrap.min.js"></script>

    <!-- JS Plugins  -->
    <script src="~/assets/js/jquery.animatedheadline.min.js"></script>
    <script src="~/assets/js/jquery.magnific-popup.min.js"></script>
    <script src="~/assets/js/owl.carousel.min.js"></script>
    <script src="~/assets/js/ajax-contact.js"></script>
    <script src="~/assets/js/main.js"></script>

</body>

</html>